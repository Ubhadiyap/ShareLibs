<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/local_music_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_beautify_local_music_list_item"
        android:background="@color/video_beautify_local_music_list_item_bg" >

        <TextView
            android:id="@+id/local_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/video_beautify_local_music_list_item_name_left"
            android:layout_marginTop="@dimen/video_beautify_local_music_list_item_name_top"
            android:maxLength="10"
            android:text="@string/video_beautify_local_music_list_item_name"
            android:textColor="@color/video_beautify_local_music_list_item_name"
            android:textSize="@dimen/video_beautify_local_music_list_item_name" />

        <TextView
            android:id="@+id/local_music_play_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/local_music_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/video_beautify_local_music_list_item_play_time_right"
            android:text="@string/video_beautify_local_music_list_item_play_time"
            android:textColor="@color/video_beautify_local_music_list_item_name"
            android:textSize="@dimen/video_beautify_local_music_list_item_play_time_size" />

        <TextView
            android:id="@+id/local_music_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/local_music_name"
            android:layout_alignParentBottom="true"
            android:maxLength="10"
            android:layout_marginBottom="@dimen/video_beautify_local_music_list_item_introduction_by_name"
            android:text="@string/video_beautify_local_music_list_item_introduction"
            android:textColor="@color/video_beautify_local_music_list_item_name"
            android:textSize="@dimen/video_beautify_local_music_list_item_play_time_size" />
    </RelativeLayout>

</LinearLayout>