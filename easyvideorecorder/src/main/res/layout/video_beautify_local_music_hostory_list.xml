<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/local_music_hostory_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/video_beautify_local_music_list_line"
        android:dividerHeight="@dimen/video_beautify_local_music_list_line_height" />

    <TextView
        android:id="@+id/video_beautify_no_history_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="24dp"
        android:drawableTop="@drawable/video_beautify_local_no_music"
        android:paddingTop="104dp"
        android:text="@string/video_beautify_no_local_music_history_text"
        android:visibility="gone" />

</LinearLayout>