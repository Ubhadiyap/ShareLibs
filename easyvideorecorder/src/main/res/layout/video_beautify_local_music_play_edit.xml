<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/local_music_list_item_play"
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_beautify_local_music_list_item_play"
        android:background="@color/video_beautify_local_music_buttom_bg" >

        <ImageButton
            android:id="@+id/local_music_play"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/video_beautify_local_music_list_item_playbtn_left"
            android:background="@color/video_beautify_local_music_buttom_bg"
            android:src="@drawable/video_beautify_local_music_stop_music_selector" />

        <ImageButton
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/video_beautify_local_music_list_item_addbtn_right"
            android:background="@color/video_beautify_local_music_list_item_bg" />

        <TextView
            android:id="@+id/local_music_play_time_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/video_beautify_local_music_play_edit_time_bottom_right"
            android:layout_toLeftOf="@id/test"
            android:text="@string/video_beautify_local_music_list_item_play_time"
            android:textColor="@color/video_beautify_local_music_list_item_playing_time"
            android:textSize="@dimen/video_beautify_local_music_list_item_playing_size" />

        <TextView
            android:id="@+id/local_music_playpro_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/video_beautify_local_music_list_item_playpro_time_left"
            android:layout_toRightOf="@id/local_music_play"
            android:text="@string/video_beautify_local_music_list_item_play_time"
            android:textColor="@color/video_beautify_local_music_list_item_playing_time"
            android:textSize="@dimen/video_beautify_local_music_list_item_playing_size" />

        <SeekBar
            android:id="@+id/local_music_playpro"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/video_beautify_local_music_list_item_playpro_left"
            android:layout_marginRight="@dimen/video_beautify_local_music_list_item_playpro_right"
            android:layout_toLeftOf="@id/local_music_play_time_bottom"
            android:layout_toRightOf="@id/local_music_playpro_time"
            android:maxHeight="5dp"
            android:minHeight="2dp"
            android:progressDrawable="@drawable/video_beautify_local_music_play_progress_style"
            android:thumb="@drawable/video_beautify_localmusic_edit_seekbar_thumbl"
            android:thumbOffset="0dip" />
    </RelativeLayout>
    <!-- android:thumb="@drawable/video_beautify_local_music_speed_music_selector" /> -->

</LinearLayout>