<?xml version="1.0" encoding="utf-8"?>  
<selector xmlns:android="http://schemas.android.com/apk/res/android">  
    <item android:state_pressed="true" 
          android:drawable="@drawable/video_beautify_local_stop_music_down" /> <!-- pressed,enable等多个属性 -->  
    <item android:drawable="@drawable/video_beautify_local_stop_music_down" android:state_selected="true" />
    <item android:state_focused="true"  
          android:drawable="@drawable/video_beautify_local_stop_music_down" /> <!-- focused -->  
    <item android:state_hovered="true"  
          android:drawable="@drawable/video_beautify_local_stop_music_down" /> <!-- hovered -->  
    <item android:drawable="@drawable/video_beautify_local_stop_music_normal" /> <!-- default -->  
</selector>
